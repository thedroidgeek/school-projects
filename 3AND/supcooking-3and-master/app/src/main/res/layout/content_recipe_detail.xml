<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".RecipeDetailActivity"
    tools:showIn="@layout/activity_recipe_detail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/detail_rating_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Tap to add your review"
            android:textSize="12sp" />

        <RatingBar
            android:id="@+id/detail_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_rating_label"
            android:layout_alignParentEnd="true"
            android:isIndicator="true"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:numStars="5"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:layout_marginStart="-30dp"
            android:layout_marginEnd="-30dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:text="Type"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detail_type"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/textView5"
            android:text="Recipe Type" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/detail_type"
            android:layout_below="@id/detail_type"
            android:paddingTop="16dp"
            android:text="Cooking Time"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detail_cooking_time"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView7"
            android:layout_below="@+id/textView7"
            android:text="60min?" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/detail_cooking_time"
            android:layout_below="@id/detail_cooking_time"
            android:paddingTop="16dp"
            android:text="Preparation Time"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detail_prep_time"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView9"
            android:layout_below="@+id/textView9"
            android:text="15min?" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/detail_prep_time"
            android:layout_below="@id/detail_prep_time"
            android:paddingTop="16dp"
            android:text="Ingredients"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detail_ingredients"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView11"
            android:layout_below="@+id/textView11"
            android:text="\u2022 This\n\u2022 These\n\u2022 And that" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/detail_ingredients"
            android:layout_below="@id/detail_ingredients"
            android:paddingTop="16dp"
            android:text="Preparation Steps"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detail_prep_steps"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView13"
            android:layout_below="@+id/textView13"
            android:text="\u2022 Do this\n\u2022 Do that\n\u2022 Do this other thing\n\u2022 And then, finally, do this last thing" />
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>